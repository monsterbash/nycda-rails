
<h1>Posts</h1>
<hr>
<% @posts.each do |post| %>
	<div>
		<p>
			<%= post.post_text %>
		</p>

		<p>
			<% if post.user %>
				<%= post.user.first_name %>
				<%= post.user.last_name %>
			<% end %>
		</p>

		<p>
			<%= link_to "Edit", edit_post_path(post) %> |
			<%= link_to "Delete", post_path(post), method: :delete %>
		</p>	
	</div>
	<hr>
<% end %>
