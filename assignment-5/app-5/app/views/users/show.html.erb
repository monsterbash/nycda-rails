<h1>Profile Page for
<%= @user.first_name %></h1>
<hr>
<p>
	<%= @user.first_name %>
	<%= @user.last_name %>	
</p>

<p>
	<%= mail_to @user.email %>
</p>

<p>
	<%= link_to "Edit", edit_user_path(@user) %> |
	<%= link_to "Delete", user_path(@user), method: :delete %>
</p>

<p>
	<%= link_to "Posts by this user", user_posts_path(@user) %> |
	<%= link_to "Create a post", new_post_path %>
</p>


<p>
	<%= link_to "Sign out", signout_path %>
</p>
